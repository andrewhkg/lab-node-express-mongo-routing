<form method="POST" action="/cars/<%= car._id %>?_method=PUT">
  <div class="form-group col-md-4">
    <input name="car[namepart]" class="form-control" placeholder="Name of spare parts" value="<%= car.namepart %>"/>
  </div>
  <div class="form-group col-md-4">
    <input name="car[carmodel]"  class="form-control" placeholder="Model of car" value="<%= car.carmodel%>"/>
  </div>
  <div class="form-group col-md-4">
    <input name="car[color]"  class="form-control" placeholder="Color" value="<%= car.color %>" />
  </div>
  <div class="form-group col-md-4">
    <input type="date" name="car[manufactured]"  class="form-control" placeholder="Year of manufacture" value="<%= car.manufactured %>"/>
  </div>
  <div class="form-group col-md-4">
    <button class="btn btn-success col-md-12">Update a spare part</button>
  </div>
</form>